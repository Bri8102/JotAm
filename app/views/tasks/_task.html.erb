<div class="row clearfix">
 <% if task.done? %>
    <div class="done">
      <%= link_to "Mark as Complete", done_list_task_path(@list, task.id), method: :patch %>
    </div>
    <div class="task">
      <p style="opacity: 0.4;"><strike><%= task.task %></strike></p>
    </div>
    <div class="trash">
      <%= link_to "Delete", list_task_path(@list, task.id), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
 <% else %>
    <div class="done">
      <%= link_to "Mark as Complete", done_list_task_path(@list, task.id), method: :patch %>
    </div>
    <div class="task">
      <p><%= task.task %></p>
    </div>
    <div class="trash">
      <%= link_to "Delete", list_task_path(@list, task.id), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
 <% end %>
</div>